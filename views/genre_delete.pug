extends layout

block content
  h1 #{title}: #{book.title}
  p= genre.name 

  if book.length > 0
    p #[strong Delete the following books before attempting to delete this genre.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Book in this #{genre.name}

      dl
      each b in book
        dt
          a(href=b.url) #{b.title}
        dd #{b.author.name}
        dd #{b.isbn}

  else
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='genreid', required='true', value=genre._id  )

      button.btn.btn-primary(type='submit') Delete
